{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": ".",
    "paths": {
      "components/*": ["src/components", "src/components/*"],
      "styles/*": ["src/styles", "src/styles/*"],
      "utils/*": ["src/utils", "src/utils/*"],
      "images/*": ["public/images", "public/images/*"],
      "hooks/*": ["src/hooks", "src/hooks/*"],
      "helpers/*": ["src/helpers", "src/helpers/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
